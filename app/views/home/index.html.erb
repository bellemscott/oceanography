
<%= render 'layouts/header'%>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <div class= "container" style="background:#ADD8E6" >
                <!-- Indicators --> 
                <% @infographs.each do |title, card|%>
                        <div class="container flip-card">
                            <div class="flip-card-inner">
                                <div class="flip-card-front center">
                                    <h1 class="card-title"> <%=title%> </h1>
                                    <h3 class="card-text text-muted"></h3>
                                </div>
                                <div class="flip-card-back">
                                    <div class="center" style="padding:60px">
                                        <%=title%>
                                        <div class="card-body">
                                        <%=card%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <br>
                    <br>
                <%end%>
    </div>
    <%= render 'layouts/footer'%>
</body>
</html> 